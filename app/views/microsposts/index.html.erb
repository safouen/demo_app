<h1>Listing microsposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @microsposts.each do |microspost| %>
      <tr>
        <td><%= microspost.content %></td>
        <td><%= microspost.user_id %></td>
        <td><%= link_to 'Show', microspost %></td>
        <td><%= link_to 'Edit', edit_microspost_path(microspost) %></td>
        <td><%= link_to 'Destroy', microspost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

